  <style> 
    th, td {
        padding: 10px;
        text-align: left;
    }
    table {
    border-collapse: collapse;
    }
  
    table, th, td {
        border: 1px solid black;
    }
  </style>

<h1>Homepage</h1>
<table>
  <thead>
    <tr>
      <th><%= "Username" %></td>
      <th><%= "Email" %></td>
      <th><%= "Age" %></td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br></br>

<table>
  <thead>
    <tr>
      <th><%= "Cat Name" %></td>
    </tr>
  </thead>
  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br></br>

<table>
  <thead>
    <tr>
      <th><%= "Tasks" %></td>
      <th><%= "Finished?" %></td>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |t| %>
      <tr>
        <td><%= t.tasks %></td>
        <% if t.finished %>
          <td><%= "Yes! You're so on top of things!" %></td>
        <% else %>
          <td><%= "No...get it together" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


